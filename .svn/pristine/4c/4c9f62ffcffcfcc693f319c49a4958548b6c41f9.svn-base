@model List<Trucks>

@{
    ViewBag.Title = "ViewTrucks";
}

<h2>ViewTrucks</h2>

<table >
    <tbody>
        Last Truck
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.SellerName</td>
                <td> @item.Brand  @item.Model </td>
                <td> @item.Price </td>
                <td> @item.Fuel</td>
                <td>@item.Gear</td>
                <td>@item.Color</td>
            </tr>
        }

    </tbody>
</table>

<style>
    td {
        text-align: center;
    }
</style>