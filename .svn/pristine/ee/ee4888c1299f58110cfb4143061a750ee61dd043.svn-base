@model PageableCollection

@{
    ViewBag.Title = "ViewMotos";
}

<h2>View Motos</h2>

<table>
    <tbody>
        Last Moto
        @foreach (var item in Model.MotoList)
        {
            <tr>
                @foreach (var vPath in item.ImageVirtualPaths)
                {
                    <td>
                        <a href="/Home/ViewDetails/@MachineryTypeEnum.Moto/@item.MotoId"><img src="@Url.Content(vPath)" style="width:80px" height="80" /></a>
                    </td>
                    break;
                }
                <td> @item.SellerName</td>
                <td> @item.Brand  @item.Model </td>
                <td> @item.Price </td>
                <td> @item.Fuel</td>
                <td>@item.Gear</td>
            </tr>
        }

    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">

        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="~/Home/ViewMotos/@(Model.CurrentPage - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var className = string.Empty;
            if (Model.CurrentPage == i)
            {
                className = "active";
            }
            <li class="@className"><a href="~/Home/ViewMotos/@i">@i</a></li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="~/Home/ViewMotos/@(Model.CurrentPage + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>

<style>
    td{
       text-align:center
    }
</style>